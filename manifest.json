{
  "name": "@deskpro-apps/click-up",
  "title": "ClickUp",
  "description": "View your ClickUp tasks linked with Deskpro tickets to streamline communication with users.",
  "version": "0.0.10",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "entityAssociations": {
    "linkedClickUpTask": {
      "title": "Linked ClickUp Task",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    },
    "add_comment_when_linking": {
      "title": "Leave a comment on the task in ClickUp when it is linked to a ticket in Deskpro",
      "description": "",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 40
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.clickup.com/api/v2/.*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "timeout": 20
      }
    ]
  }
}
